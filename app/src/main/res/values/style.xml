<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item> <!-- Used for action mode overlays-->
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary
        </item><!--   your app branding color for the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark
        </item><!--   darker variant for the status bar and contextual app bars -->
        <item name="colorAccent">@color/colorAccent
        </item><!--   theme UI controls like checkboxes and text fields -->

    </style>
</resources>